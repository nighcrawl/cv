{
  "name": "cv-eleventy",
  "private": true,
  "type": "module",
  "scripts": {
    "scss:dev": "sass src/assets/css/main.scss:src/assets/css/main.css --watch --embed-source-map",
    "scss:build": "sass src/assets/css/main.scss:src/assets/css/main.css --no-source-map --style=compressed",
    "dev": "concurrently -k \"eleventy --serve\" \"npm run scss:dev\"",
    "build": "npm run scss:build && eleventy",
    "validate": "node scripts/validate.mjs",
    "pdf": "node scripts/pdf.mjs",
    "fmt": "prettier --write \"{data,templates,src,scripts}/**/*\"",
    "resume": "node scripts/resume.mjs",
    "og": "node scripts/og.mjs",
    "release": "npm run validate && npm run build && npm run resume && npm run pdf && npm run og"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "concurrently": "^9.2.0",
    "gray-matter": "^4.0.3",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "playwright": "^1.46.0",
    "prettier": "^3.3.3",
    "sass": "^1.90.0",
    "semantic-release": "^24.2.7",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  }
}
