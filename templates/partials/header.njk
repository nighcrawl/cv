<header class="header">
  <h1>{{ site.identity.name }}</h1>
  <p class="subtitle">{{ site.identity.title }}</p>
  <p class="meta">
    <span>{{ site.identity.location }}</span>
    {% if site.identity.email %} • <a href="mailto:{{ site.identity.email }}">{{ site.identity.email }}</a>{% endif %}
    {% if site.identity.website %} • <a href="{{ site.identity.website }}">{{ site.identity.website }}</a>{% endif %}
  </p>
  <p class="socials">
    {% for s in site.identity.socials %}
      <a href="{{ s.url }}" rel="me noopener" target="_blank">{{ s.name }}</a>{% if not loop.last %} · {% endif %}
    {% endfor %}
  </p>

  {% if lang == 'en' %}
    {% set pdf_href = '/en/cv.pdf' %}
    {% set json_href = '/en/resume.json' %}
    {% set switch_href = '/' %}
    {% set switch_hreflang = 'fr' %}
  {% else %}
    {% set pdf_href = '/cv.pdf' %}
    {% set json_href = '/resume.json' %}
    {% set switch_href = '/en/' %}
    {% set switch_hreflang = 'en' %}
  {% endif %}

  <div class="actions">
    <a class="btn" href="{{ pdf_href | url }}" download aria-label="{{ i18n.labels.pdf }}">{{ i18n.labels.pdf }}</a>
    <a class="btn ghost" href="{{ json_href | url }}" aria-label="{{ i18n.labels.json }}">{{ i18n.labels.json }}</a>
    <a class="btn ghost" href="{{ switch_href | url }}" hreflang="{{ switch_hreflang }}">{{ i18n.labels.switchTo }}</a>
  </div>

</header>
