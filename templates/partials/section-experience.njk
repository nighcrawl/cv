{# Rendu EXACT de chaque expérience, au format de ta page #}
<li class="list__item">
  <div class="card">
    <h3 class="card__title">{{ xp.role }}</h3>
    <div class="card__meta">
      <span class="date--start">{{ xp.start | dateFmt(lang, 'shortMonthYear') }}</span>
      {% if xp.end %}
        <span class="date--end">{{ xp.end | dateFmt(lang, 'shortMonthYear') }}</span>
        <span class="relative-time" data-start="{{ xp.start | dateAttr }}" data-end="{{ xp.end | dateAttr }}"></span>
        <span class="relative-time--ssr">
          ({{ xp.start | relativeMonths(xp.end, lang) }})
        </span>
      {% else %}
        <span class="date--end">{% if lang == 'en' %}Present{% else %}En poste{% endif %}</span>
        <span class="relative-time" data-start="{{ xp.start | dateAttr }}"></span>
        <span class="relative-time--ssr">
          ({{ xp.start | relativeMonths(null, lang) }})
        </span>
      {% endif %}
    </div>

    <div class="card__description">
      <div class="company">
        {% if xp.url %}
          <a href="{{ xp.url }}" class="company__name">{{ xp.company }}</a>, <span class="company__location">{{ xp.location }}</span>
        {% else %}
          <span class="company__name">{{ xp.company }}</span>, <span class="company__location">{{ xp.location }}</span>
        {% endif %}
      </div>

      {% if xp.description %}
        {% for p in xp.description %}
          <p>{{ p }}</p>
        {% endfor %}
      {% endif %}

      {% if xp.projects %}
        <p><b>{% if lang == 'en' %}Some projects I worked on:{% else %}Quelques projets sur lesquels j'ai travaillé&nbsp;:{% endif %}</b></p>
        <ul>
          {% for p in xp.projects %}
            <li><a href="{{ p.url }}">{{ p.name }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</li>
