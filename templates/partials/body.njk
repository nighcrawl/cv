{% include "header.njk" %}

<section id="skills">
  <h2>{{ i18n.labels.skills }}</h2>
  {% for group in site.skills %}
    <h3>{{ group.group }}</h3>
    <ul class="tags">
      {% for s in group.items %}<li>{{ s }}</li>{% endfor %}
    </ul>
  {% endfor %}
</section>

<section id="experience">
  <h2>{{ i18n.labels.experience }}</h2>
  {% for xp in site.experience %}
    {% include "section-experience.njk" %}
  {% endfor %}
</section>

<section id="education">
  <h2>{{ i18n.labels.education }}</h2>
  {% for edu in site.education %}
    {% include "section-education.njk" %}
  {% endfor %}
</section>

